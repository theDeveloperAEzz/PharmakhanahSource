<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <gradient
                android:endColor="#fff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000" />
            <corners
                android:radius="300dp" />
            <padding
                android:left="50dp"
                android:top="50dp"
                android:right="50dp"
                android:bottom="50dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#c71610"
                />

            <stroke
                android:width="1dp"
                android:color="#000"/>
            <corners
                android:radius="300dp" />
            <padding
                android:left="50dp"
                android:top="50dp"
                android:right="50dp"
                android:bottom="50dp" />
        </shape>
    </item>
</selector>