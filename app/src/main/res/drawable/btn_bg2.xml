<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000" />
            <corners
                android:radius="300dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners android:radius="25dp" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <gradient
                android:angle="270"
                android:endColor="#e00416" />

        </shape>
    </item>
</selector>