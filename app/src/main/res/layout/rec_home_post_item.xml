<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">



        <android.support.v7.widget.CardView
            android:id="@+id/login_card"
            style="@style/SelectableItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/transparent"
            tools:ignore="KeyboardInaccessibleWidget,ObsoleteLayoutParam">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/author_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/test_image"
                    app:civ_border_color="#FF000000"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="-1"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/author_pic"
                    android:layout_toEndOf="@id/author_pic"
                    android:text="Ahmed ezz"
                    android:textColor="#000"
                    android:textSize="15sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/author_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/author_name"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/author_pic"
                    android:text="today 6:14 pm"
                    android:textColor="#000"
                    android:textSize="10sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/author_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/author_date_time"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/author_pic"
                    android:text="cairo"
                    android:textColor="#000"
                    android:textSize="10sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/how_many_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/author_name"
                    android:paddingBottom="5dp"
                    android:gravity="center|bottom"
                    android:paddingEnd="10dp"
                    android:text="100 likes"
                    android:textColor="#000"
                    android:textSize="10sp"
                    tools:ignore="RtlCompat" />

                <View
                    android:id="@+id/view13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/author_pic"
                    android:background="#D3D3D3"
                    tools:ignore="UnknownIdInLayout" />


                <TextView
                    android:id="@+id/txt_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/author_pic"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:text="@string/i_wish_you_healing"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />


                <View
                    android:id="@+id/view14"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_summary"
                    android:background="#D3D3D3"
                    tools:ignore="UnknownIdInLayout" />


                <TextView
                    android:id="@+id/author_medicine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_summary"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:text="kataphlamkataphlamkataphlamkataphlamkataphlamkataphlamkataphlamkataphlamkataphlamkataphlamkataphlamkataphlam"
                    android:textColor="#000"
                    android:textSize="15sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/author_production_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/author_medicine_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Pro.Date:1/8/2018"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/author_expiration_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/author_production_date"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Exp.Date:1/8/2018"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/author_shelf_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/author_expiration_date"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/shelf_life"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />


                <TextView
                    android:id="@+id/author_dosage_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/author_medicine_name"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/dosage_form"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/author_package_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/author_dosage_form"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/package_type"
                    android:textColor="#000"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />


                <ImageView
                    android:id="@+id/author_medicine_image"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/author_medicine_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/a"
                    tools:ignore="RtlCompat" />


                <View
                    android:id="@+id/view12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/author_shelf_life"
                    android:layout_marginTop="5dp"
                    android:background="#D3D3D3" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/view12"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_whats_app"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_click_whats"
                        android:clickable="true"
                        android:src="@mipmap/ic_whats_app1" />

                    <ImageButton
                        android:id="@+id/btn_chat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_click_chat"
                        android:src="@mipmap/ic_goto_chat1" />

                    <ImageButton
                        android:id="@+id/btn_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_click_chat"
                        android:src="@mipmap/ic_before_like1" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear"
                    android:background="#000" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>



</RelativeLayout>
