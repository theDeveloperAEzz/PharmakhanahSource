<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <android.support.v7.widget.CardView
            android:id="@+id/login_card"
            style="@style/SelectableItemTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="3dp"
            tools:ignore="KeyboardInaccessibleWidget,ObsoleteLayoutParam">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/my_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/test_image"
                    app:civ_border_color="#FF000000"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="-1"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/my_pic"
                    android:layout_toEndOf="@id/my_pic"
                    android:text="Ahmed ezz"
                    android:textColor="#000"
                    android:textSize="22dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/my_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_name"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/my_pic"
                    android:text="today 6:14 pm"

                    android:textColor="#000"
                    android:textSize="12dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/my_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_date_time"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/my_pic"
                    android:text="cairo"
                    android:textColor="#000"

                    android:textSize="12dp"
                    tools:ignore="RtlCompat" />

                <View
                    android:id="@+id/view13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/my_medicine_name"
                    android:background="#D3D3D3"
                    tools:ignore="UnknownIdInLayout" />


                <TextView
                    android:id="@+id/my_medicine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_pic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="kataphlam"
                    android:textColor="#000"
                    android:textSize="15dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/my_expiration_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_medicine_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Exp.Date:1/8/2018"
                    android:textColor="#000"
                    android:textSize="15dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/my_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_expiration_date"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="3 bar and tray"
                    android:textColor="#000"
                    android:textSize="15dp"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:id="@+id/my_medicine_image"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/my_quantity"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/b" />

                <TextView
                    android:id="@+id/how_many_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_above="@+id/view12"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="5dp"
                    android:paddingEnd="20dp"
                    android:text="100 likes"
                    android:textColor="#000"
                    android:textSize="12dp"
                    tools:ignore="RtlCompat" />

                <Button
                    android:id="@+id/click_to_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/my_medicine_image"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/edit"
                    android:textColor="#000"
                    tools:ignore="RtlCompat" />

                <View
                    android:id="@+id/view12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/click_to_edit"
                    android:background="#D3D3D3" />

                <TextView
                    android:id="@+id/long_click_to_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/view12"
                    android:paddingBottom="5dp"
                    android:paddingEnd="20dp"
                    android:text="@string/long_click_to_delete"
                    android:textColor="#999"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat,RtlSymmetry" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/long_click_to_delete"
                    android:background="#999" />
            </RelativeLayout>



        </android.support.v7.widget.CardView>

    </ScrollView>


</RelativeLayout>
