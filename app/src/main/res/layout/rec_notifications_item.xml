<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_avatar_notify"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:src="@drawable/test_image"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/name_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_avatar_notify"
            android:layout_alignTop="@+id/icon_avatar_notify"
            android:text="Ahmed Ezz"
            android:textColor="#000"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/date_time_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_avatar_notify"
            android:layout_below="@+id/name_notify"
            android:text="now"
            android:textSize="12dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/city_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/icon_avatar_notify"
            android:layout_marginEnd="5dp"
            android:text="Ahmed Ezz"
            android:textSize="11dp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/medicine_name_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/name_notify"
            android:layout_below="@+id/date_time_notify"
            android:text="asprin"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"

            tools:ignore="RtlCompat" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
